= content_for(:javascripts_block) do
  = javascript_include_tag 'application'

= content_for(:content) do
  %section{ :style => "width: 100%; height: 70px; background-color: rgb(240, 240, 240); margin: 0; border-bottom: 1px solid rgb(230, 230, 230);" }
    %h1.logo
      Trebuchet
    .form.labels_top
      .control_group
        .label
          %label
            Select Operation Type
        .input
          %select#operation_select
            %option
            - operations.each do |operation|
              %option{ :value => operation }
                = operation
    .form.labels_top
      .control_group.disabled
        .label
          %label
            Select Siege
        .input
          %select#siege_select{ :disabled => "disabled" }
            %option
              Blah
    %button.primary.fr#reset_axis
      Reset Graph
  .fl.placeholder{ :style => "width: 98%; height: 98%; margin: 20px 0 20px 20px; " }
  %ul.fr#steps_list

  #tooltip.hidden
