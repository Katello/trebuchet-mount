= content_for(:javascripts_block) do
  = javascript_include_tag 'alchemy/jquery/jquery-1.6.2'
  = javascript_include_tag 'alchemy/underscore-1.3.1'
  = javascript_include_tag 'alchemy/jquery/plugins/jquery.tipsy'
  = javascript_include_tag 'alchemy/jquery/plugins/flot-0.7/jquery.flot'
  = javascript_include_tag 'alchemy/jquery/plugins/flot-0.7/jquery.flot.stack'
  = javascript_include_tag 'alchemy/jquery/plugins/flot-0.7/jquery.flot.selection'
  = javascript_include_tag 'alchemy/jquery/plugins/flot-0.7/jquery.flot.crosshair'
  = javascript_include_tag 'alchemy/jquery/plugins/chosen.jquery'
  = javascript_include_tag 'application'

= content_for(:content) do
  %section{ :style => "width: 100%; height: 80px; background-color: rgb(240, 240, 240); margin: 0; border-bottom: 1px solid rgb(230, 230, 230);" }
    %h1.logo
      Trebuchet
    .form.labels_top
      .control_group
        .label
          %label
            Select Operation Type
        .input
          %select#operation_select
            %option
            - operations.each do |operation|
              %option{ :value => operation }
                = operation
    -#.form.labels_top
      .control_group.disabled
        .label
          %label
            Select Siege
        .input
          %select{ :disabled => "disabled" }
            %option
              Blah
    %button.primary.fr#reset_axis
      Reset Graph
  .fl.placeholder{ :style => "width: 98%; height: 98%; margin: 20px 0 20px 20px; " }
  %ul.fr#steps_list

  #tooltip.hidden
